<div class='card'>
    <div class='card-body'>
        <h3 class='card-title'>Account Sign Up</h3>
        <%= form_with model: @user, url: sign_up_path do |f| %>
            <%= render partial: "shared/form_errors", locals: { object: f.object } %>
            <div class='mb-3'>
                <%= f.label :name, nil, class: 'form-label' %>
                <%= f.text_field :name, required: true, class: 'form-control' %>
            </div>
            <div class='mb-3'>
                <%= f.label :email, nil, class: 'form-label' %>
                <%= f.email_field :email, required: true, class: 'form-control' %>
            </div>
            <div class='mb-3'>
                <%= f.label :password, nil, class: 'form-label' %>
                <%= f.password_field :password, required: true, class: 'form-control' %>
            </div>
            <div class='mb-3'>
                <%= f.label :password_confirmation, nil, class: 'form-label' %>
                <%= f.password_field :password_confirmation, required: true, class: 'form-control' %>
            </div>
            <%= f.submit "Sign Up" %>
        <% end %>
    </div>
</div>